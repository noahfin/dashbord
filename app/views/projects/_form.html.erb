<div class="wizard-container reg-intro">
   <div class="card card-wizard card-1-color" data-color="blue" id="wizardProfile">
      <%= form_for(@project, html: {multipart: true}) do |f| %>
      <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
      <div class="card-header text-center  p-0">
         <div class=" card-1-color  div-header p-4">
            <h3 class="card-title text-white">
               Build Your Project Outline
            </h3>
            <h5 class="card-description text-white">This information will let us know more about your project.</h5>
         </div>
         <div class="wizard-navigation">
            <ul class="nav nav-pills">
               <li class="nav-item text-white">
                  <a class="nav-link active text-white" href="#about" data-toggle="tab" role="tab">
                  Information
                  </a>
               </li>
               <li class="nav-item text-white">
                  <a class="nav-link text-white" href="#account" data-toggle="tab" role="tab">
                  Category
                  </a>
               </li>
               <li class="nav-item text-white">
                  <a class="nav-link text-white" href="#address" data-toggle="tab" role="tab">
                  Time
                  </a>
               </li>
            </ul>
         </div>
      </div>
      <div class="card-body ">
         <div class="tab-content">
            <div class="tab-pane active" id="about">
               <h5 class="info-text text-white"> Let's start with the basic information for your project</h5>
               <div class="row justify-content-center">
                  <div class="col-sm-3  mt-0 pt-0">
                     <div class="ml-3 pt-0 mt-0">
                        <div class="fileinput fileinput-new ml-4 mr-0 pl-4 pr-0 mt-0 pt-0 image-sec-pr" data-provides="fileinput">
                           <div class="fileinput-new thumbnail" style="max-width: 150px; max-height: 150px;"><%= image_tag @project.avatar.present? ? @contact.avatar.url(:thumb) : 'http://placehold.it/150x150', class: "media-object" %>
                           </div>
                           <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"><%= image_tag @project.avatar.present? ? @project.avatar.url(:thumb) : 'http://placehold.it/150x150', class: "media-object" %>
                           </div>
                           <div class="text-center">
                              <span class="btn btn-outline-white btn-file">
                              <span class="fileinput-new text-white">Choose Photo</span>
                              <span class="fileinput-exists text-white">Change</span><%= f.file_field :avatar %>
                              </span>
                              <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                           </div>
                        </div>
                        <div class="ml-4 pl-4">
                           <a href="https://unsplash.com/" class="text-center text-white mt-3 ml-3 image-sec-pr" title="unsplash">Download A Image</a>
                        </div>
                     </div>
                  </div>
                  <div class="col-sm-3 mt-4 pl-4">
                     <div class="input-group form-control-lg text-white">
                        <div class="input-group-prepend">
                           <span class="input-group-text">
                           <i class="material-icons text-white">content_copy</i>
                           </span>
                        </div>
                        <div class="form-group">
                           <label for="exampleInput1" class="bmd-label-floating text-white">Project Name</label>
                           <%= f.text_field :name, class: "form-control text-white" %>
                        </div>
                     </div>
                     <!-- projected_start_time projected_finish_time actual_start_time actual_finshed_time staffing resources requirements description -->
                  </div>
                  <div class="col-sm-3  mt-4">
                     <div class="input-group form-control-lg text-white">
                        <div class="input-group-prepend">
                           <span class="input-group-text">
                           <i class="material-icons text-white">assignment</i>
                           </span>
                        </div>
                        <div class="form-group">
                           <label for="exampleInput11" class="bmd-label-floating">Resources</label>
                           <%= f.text_field :resources, class: "form-control text-white" %>
                        </div>
                     </div>
                  </div>
                  <div class="col-sm-3  mt-4">
                     <div class="input-group form-control-lg text-white">
                        <div class="input-group-prepend">
                           <span class="input-group-text">
                           <i class="material-icons text-white">assignment</i>
                           </span>
                        </div>
                        <div class="form-group">
                           <label for="exampleInput11" class="bmd-label-floating">Requirements</label>
                           <%= f.text_field :requirements, class: "form-control text-white" %>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-md-12">
                  <div class="row">
                     <div class="col-lg-3 mt-0 pr-4 mr-0 text-white">
                        <div class="input-group form-control-lg text-white mt-4">
                           <div class="input-group-prepend">
                              <span class="input-group-text">
                              <i class="material-icons text-white">attach_money</i>
                              </span>
                           </div>
                           <div class="form-group">
                              <label for="exampleInput1" class="bmd-label-floating text-white">Project Budget</label>
                              <%= f.text_field :budget, class: "form-control text-white" %>
                           </div>
                        </div>
                     </div>
                     <div class="col-lg-9 pr-0  mt-4 text-white">
                        <div class="row">
                           <div class="col-md-12">
                              <div class="input-group pr-0 mr-0 form-control-lg">
                                 <div class="input-group-prepend">
                                    <span class="input-group-text">
                                    <i class="material-icons text-white">content_copy</i>
                                    </span>
                                 </div>
                                 <div class="form-group pr-0 mr-0">
                                    <label for="exampleInput1" class="bmd-label-floating text-white">Description</label>
                                    <%= f.text_field :description, class: "form-control text-white ml-0 pr-0 mr-0" %>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="tab-pane" id="account">
               <h5 class="info-text text-white"> What type of project? (checkboxes) </h5>
               <div class="row justify-content-center">
                  <div class="col-lg-10">
                     <div class="row ">
                        <div class="col-sm-3">
                           <div class="choice" data-toggle="wizard-checkbox">
                              <%= f.check_box :development %>
                              <div class="icon">
                                 <i class="material-icons align-self-center text-danger center-icon">business</i>
                              </div>
                              <h6 class="text-white">Development</h6>
                           </div>
                        </div>
                        <div class="col-sm-3">
                           <div class="choice" data-toggle="wizard-checkbox">
                              <%= f.check_box :maintenance %>
                              <div class="icon">
                                 <i class="material-icons text-warning">report_problem</i>
                              </div>
                              <h6 class="text-white">Maintenance</h6>
                           </div>
                        </div>
                        <div class="col-sm-3">
                           <div class="choice" data-toggle="wizard-checkbox">
                              <%= f.check_box :technology %>
                              <div class="icon">
                                 <i class="material-icons align-self-center  center-icon text-info">laptop_mac</i>
                              </div>
                              <h6 class="text-white">Technology</h6>
                           </div>
                        </div>
                        <div class="col-sm-3">
                           <div class="choice" data-toggle="wizard-checkbox">
                              <%= f.check_box :business %>
                              <div class="icon">
                                 <i class="material-icons align-self-center text-success center-icon">store</i>
                              </div>
                              <h6 class="text-white">Business</h6>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="tab-pane" id="address">
               <div class="">
                  <div class="col-sm-12">
                     <h5 class="info-text"> Fill Out The Time Requirments </h5>
                  </div>
                  <div class="row">
                     <div class='col-sm-6'>
                        <div class="form-group">
                           <div class='input-group date' id='projectedStartTime'>
                              <label class="control-label">Projected Start Time</label>
                              <input type="text" name="project[projected_start_time]" class="form-control datetimepicker" value="10/05/2016"/>
                           </div>
                        </div>
                     </div>
                     <div class='col-sm-6'>
                        <div class="form-group">
                           <div class='input-group date' id='projectedFinshTime'>
                              <label class="control-label">Projected Finsh Time</label>
                              <input type="text" name="project[projected_finish_time]" class="form-control datetimepicker" value="10/05/2016"/>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class='col-sm-6'>
                        <div class="form-group">
                           <div class='input-group date' id='actualStartTime'>
                              <label class="control-label">Actual Start Time</label>
                              <input type="text"  name="project[actual_start_time]" class="form-control datetimepicker" value="10/05/2016"/>
                           </div>
                        </div>
                     </div>
                     <div class='col-sm-6'>
                        <div class="form-group">
                           <div class='input-group date' id='actualFinshTime'>
                              <label class="control-label">Actual Finsh Time</label>
                              <input type="text" name="project[actual_finshed_time]" class="form-control datetimepicker" value="10/05/2016"/>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="card-footer">
         <div class="mr-auto">
            <input type="button" class="btn btn-previous btn-fill btn-danger btn-wd disabled" name="previous" value="Previous">
         </div>
         <div class="ml-auto">
            <input type="button" class="btn btn-next btn-fill btn-hudson btn-wd" name="next" value="Next">
            <button type="submit"  class="btn btn-finish btn-fill btn-success btn-wd" style="display: none;">finish </button>
         </div>
         <div class="clearfix"></div>
      </div>
      <% end %>
   </div>
</div>
</div>
<!-- wizard container -->
<script>
   $('.datetimepicker').datetimepicker({
   icons: {
   time: "fa fa-clock-o",
   date: "fa fa-calendar",
   up: "fa fa-chevron-up",
   down: "fa fa-chevron-down",
   previous: 'fa fa-chevron-left',
   next: 'fa fa-chevron-right',
   today: 'fa fa-screenshot',
   clear: 'fa fa-trash',
   close: 'fa fa-remove'
   }
   });
</script>
