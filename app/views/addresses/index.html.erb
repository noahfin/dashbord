<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Suite</th>
      <th>County</th>
      <th>State</th>
      <th>Country</th>
      <th>Postal code</th>
      <th>Notes</th>
      <th>City</th>
      <th>Street num</th>
      <th>Strret name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.suite %></td>
        <td><%= address.county %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.notes %></td>
        <td><%= address.city %></td>
        <td><%= address.street_num %></td>
        <td><%= address.strret_name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

