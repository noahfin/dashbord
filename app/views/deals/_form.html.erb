<div class="container">
   <div class="card gray-dark rounded-0">
      <div>
         <h3 class="text-white ml-3">Add New Deal</h3>
      </div>
      <div class="row">
         <div class="col-md-6">
            <% if deal.errors.any? %>
            <div id="error_explanation">
               <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>
               <ul>
                  <% deal.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
               </ul>
            </div>
            <% end %>
            <%= form_with(model: deal, local: true) do |form| %>
            <fieldset>
               <div class="form-group pr-4">
                  <label for="contacts" class="col col-md-4 control-label">Contact</label>
                  <div class="col-md-9 pr-4 ">
                     <div class="form-group">
                        <select class="selectpicker  mt-0 mb-0" data-style="select-with-transition" title="Add Main Contact"  data-size="8" data-style="btn-outline-info" name="contact_ids[]" multiple tabindex="-98">
                           <% Contact.all.each do |contact| %>
                           <% next if contact.name.nil? || contact.name.empty? %>
                           <option class="text-dark" value=<%= "#{contact.id}"%>><%= "#{contact.name}"%></option>
                           <% end %>
                        </select>
                     </div>
                  </div>
               </div>
               <div class="form-group pr-4">
                  <label for="contacts" class="col col-md-4 control-label">Employees</label>
                  <div class="col-md-9 pr-4 ">
                     <div class="form-group">
                        <select class="selectpicker  mt-0 mb-0" data-style="select-with-transition" title="Add Main Contact"  data-size="8" data-style="btn-outline-info" name="contact_ids[]" multiple tabindex="-98">
                           <% User.all.each do |user| %>
                           <% next if user.first_name.nil? || user.first_name.empty? %>
                           <option class="text-dark" value=<%= "#{user.id}"%>><%= "#{ user.first_name}"%></option>
                           <% end %>
                        </select>
                     </div>
                  </div>
               </div>
               <label class="control-label col-md-4">Deal Status</label>
               <div class="controls col-md-8">
                  <div class="btn-group" data-toggle="buttons-radio" data-toggle-name="deal_status_id">
                     <button type="button" class="btn btn-warning" value="Process">
                     Process       </button>
                     <button type="button" class="btn btn-success" value="Closed">
                     Accepted        </button>
                     <button type="button" class="btn btn-danger" value="Rejected">
                     Rejected        </button>
                  </div>
               </div>
               <input type="hidden" name="deal[status]" class="form-control" id="DealDealStatusId">
               <div class="form-group ml-3">
                  <label for="name" class="cols-sm-2 control-label ml-2  pl-4"></label>
                  <div class="cols-sm-10">
                     <div class="input-group">
                        <span class="input-group-addon"></span>
                        <div class="form-check mr-auto">
                           <label class="form-check-label pt-0 mt-0 pb-4">
                           <%= form.check_box :active, id: :deal_active, class: 'form-check-input' %> Is the deal active?
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </div>
                  </div>
               </div>
            </fieldset>
         </div>
         <div class="col-md-6">
            <div class="form-group">
               <label for="name" class="cols-sm-2 control-label ml-2 pl-4">name</label>
               <div class="cols-sm-10">
                  <div class="input-group">
                     <span class="input-group-addon"> <i class="material-icons text-white">monetization_on</i></span>
                     <%= form.text_field :name, id: :deal_name, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <label for="name" class="cols-sm-2 control-label ml-2  pl-4">Code</label>
               <div class="cols-sm-10">
                  <div class="input-group">
                     <span class="input-group-addon"> <i class="material-icons text-white">monetization_on</i></span>
                     <%= form.text_field :code, id: :deal_code, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <label for="name" class="cols-sm-2 control-label ml-2  pl-4">Category</label>
               <div class="cols-sm-10">
                  <div class="input-group">
                     <span class="input-group-addon"> <i class="material-icons text-white">monetization_on</i></span>
                     <%= form.text_field :category, id: :deal_category, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <label for="name" class="cols-sm-2 control-label ml-2  pl-4">Potential Commission</label>
               <div class="cols-sm-10">
                  <div class="input-group">
                     <span class="input-group-addon"> <i class="material-icons text-white">monetization_on</i></span>
                     <%= form.text_field :potential_commission, id: :deal_potential_commission, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
            <div class="form-group">
               <%= form.label :lead_id, class: 'cols-sm-2 bmd-lable-floating  ml-2  pl-4' %>
               <div class="cols-sm-10">
                  <div class="input-group">
                     <span class="input-group-addon"> <i class="material-icons text-white">monetization_on</i></span>
                     <%= form.text_field :lead_id, id: :deal_lead_id, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="form-group ml-4 ml-3">
            <span>
            <%= form.submit class: 'btn btn-info submit' %>
            <button class="btn btn-info ml-2" ><i class="fa fa-save"></i> Add</button>  &nbsp;<a href="/crm/deals" class="btn btn-primary"><i class="fa fa-reply"></i>&nbsp;Cancel</a>
            </span>
         </div>
         <% end %>
      </div>
   </div>
</div>
<script type="text/javascript">
   $('.selectpicker').selectpicker('toggle');
</script>
