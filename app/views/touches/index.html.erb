}
.smallIn1 { margin-left: 80px;}
.smallIn2 { margin-left: 62px;}
.smallIn3 { margin-left: 80px;}
.smallIn4 { margin-left: 5px;}
.smallIn5 { margin-left: 38px;}

@media only screen and (max-width: 945px) {
   .largeIn , button{
      margin-top: 10px;
      width: 578px;
   }
}
@media only screen and (max-width: 1207px) {
   button .largIn{
      margin-top: 10px;
   }
   .back {
      margin-top: -10px;
   }
   .search-input {
      top: 102px;
}
@media only screen and (max-width: 780px) {
   .container {
      margin-left: 50px;
      }
   }
@media only screen and (max-width: 740px) {
   .container {
      width: 100%;
   }
   .header{
         margin-bottom: 0;
         padding-top: 0px;
      }
   .container {
      margin: auto;
      padding: 0;
      padding-left: 8px;
      width: 100%;
   }
   .new-container {
      margin: auto;
      padding: 0;
      width: 98.5%;
   }
   .side-container{
      position: fixed;
      left: 0;
      top: 0px;
      width: 30px;
      height: 40px;
      background: rgba(34,52,50,.3);
   }
