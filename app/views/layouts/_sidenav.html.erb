<div class="list-group">
  <%= link_to contacts_path, class: "list-group-item" do %>
      All Contacts <span class="badge text-dark"><%= @contacts.count %></span>
  <% end %>
<% Group.all.each do |group| %>
    <%= link_to contacts_path(group_id: group.id), class: "list-group-item" do %>
      <%= group.name %><span class="badge text-dark "><%= group.contacts.count %></span>
    <% end %>
<% end %>
</div>
