
<%= @properties.each do |property| %>
<div class="row">
  <div class="col-md-6">
    <div class="single-news mb-4">

                <!-- Grid row -->
                <div class="row">

                  <!-- Grid column -->
                  <div class="col-md-3">

                    <!--Image-->
                    <div class="view overlay rounded z-depth-1 mb-4">
                      <%= asset_url(property.avatar.present? ? property.avatar.url() : 'image_placeholder.jpg') %>
                      <a>
                        <div class="mask rgba-white-slight waves-effect waves-light"></div>
                      </a>
                    </div>

                  </div>
                  <!-- Grid column -->

                  <!-- Grid column -->
                  <div class="col-md-9">

                    <!-- Excerpt -->
                    <p class="font-weight-bold dark-grey-text"><%= property.created_at.strftime("%d %b. %Y") %></p>
                    <div class="d-flex justify-content-between">
                      <div class="col-11 text-truncate pl-0 mb-3">
                              <%= link_to  property_posts_path(property), class: 'text-info', title: 'View Activty', rel: "tooltip"  do %>
            <h6 class="card-category text-info"><%= property.name %></h6>
            <% end %>
                      </div>
                      <a><i class="fa fa-angle-double-right"></i></a>
                    </div>

                  </div>
                  <!-- Grid column -->

                </div>
                <!-- Grid row -->

              </div>
  </div>

</div>
<% end %>
