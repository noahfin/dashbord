<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Business</th>
      <th>Address</th>
      <th>Email</th>
      <th>Date</th>
      <th>Phone</th>
      <th>Number</th>
      <th>Size requirement</th>
      <th>Location need</th>
      <th>Time requirement</th>
      <th>Notes</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.name %></td>
        <td><%= lead.business %></td>
        <td><%= lead.address %></td>
        <td><%= lead.email %></td>
        <td><%= lead.date %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.number %></td>
        <td><%= lead.size_requirement %></td>
        <td><%= lead.location_need %></td>
        <td><%= lead.time_requirement %></td>
        <td><%= lead.notes %></td>
        <td><%= lead.contact %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

