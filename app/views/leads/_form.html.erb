   <div class="">
      <div class="col-md-8 col-md-offset-2 bg-footer">
<div class="row">



<div class="col-md-6">
   <h3 class="page-title">Lead Form </h3>
</div>
<div class="col-md-6">
  <div class="">
                  <%= form.submit class: 'btn info-color-dark rounded-0 btn-lg pull-right mt-3' %>
               </span>
