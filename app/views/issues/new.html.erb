<div class="container">
<div class="row">


<div class="">
<div class="card card-1  ml-auto mr-auto" style="width: 23rem;">
   <%= form_tag  property_issues_path do |form| %>


  <div class="card-body">
    <h5 class="card-title text-danger">Post an New Issue<span class="float-right">
                                 <i class="material-icons text-danger">report_problem</i>
                                </span></h5>
    <p class="card-text"> Please give the Issue severity rating, "CRITICAL" being the worst and "COSMETIC" means the issue is not to bad</p>
  </div>
  <ul class="list-group list-group-flush ">
    <li class="list-group-item">
     <label class="bmd-label-floating ">severity</label>

    <%= select_tag :severity, options_for_select(["COSMETIC", "MINOR", "MAJOR", "CRITICAL"]), prompt: 'Please pick a severity level', class: "form-control text-muted  mr-0 pr-0"  %>


  </li>

  <li class="list-group-item list-unstyled"> <label class="bmd-label-floating ">Status</label>
  </li>
 <li class="list-group-item list-unstyled">
      <%= select_tag :status, options_for_select(["REPORTED", "INVESTIGATED", "FIX_IN_PROGRESS", "FIXED"]), prompt: 'Please pick the status of this issue', class: "form-control text-muted  mr-0 pr-0"  %>
  </li>

    <li class="list-group-item list-unstyled">   <label class="bmd-label-floating">comment</label>
    <%=  text_area_tag 'comment', @issue.comment, rows: 4, cols: 45, class: 'form-control text-white ' %>
  </li>

  </ul>
  <div class="card-body">
     <button type="submit"  class='btn-danger btn'>New Issue</button>
     <%= link_to 'Back', properties_path, class: 'float-right mt-4 text-white' %>
  </div>
</div>

<% end %>


</div>
