

<h1>Activites and News for <%= @property.name %></h1>

<table>
  <thead class="b-bottom">
    <tr>
       <tr class="">
      <hr>
      <th class="m-4 p-4 text-info">Rating</th>
      <th class="m-4 p-4 text-info">Comments</th>
       <th class="m-4 p-4 text-info">Actions</th>
    </tr>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody class="m-4 p-4">

    <% @posts.each do |post| %>
      <tr class="b-bottom">
        <td class="m-4 p-4 text-warning"><%=  post.rating %></td>

        <td class="m-4 p-4"><%= post.comment %></td>
        <td class="m-4 p-4"><%= link_to 'Show', property_post_path(post.property, post), class: 'text-muted' %> </td>
        <% if current_user.id == post.user.id %>
        <td class="m-4 p-4"><%= link_to 'Edit', edit_property_post_path(post.property, post), class: 'text-muted' %></td>
        <td class="m-4 p-4"><%= link_to 'Destroy', [post.property, post], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-muted' %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_property_post_path, class: "text-info" %> <span class="m-4 p-4"><%= link_to 'Back', properties_path, class: 'text-muted' %></span>
