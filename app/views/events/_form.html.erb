<div class="modal-body">
  <h5>Popover in a modal</h5>

</div>

<button class="btn btn-round" data-toggle="modal" data-target="#loginModal">
    Login<i class="material-icons">assignment</i>

</button>

<div class="modal fade" id="loginModal" tabindex="-1" role="">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="card bg-black">
                <div class="modal-header">
                    <div class="card-header card-header-primary text-center">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
                        <h4 class="card-title">Calender Form</h4>
                        <div class="social-line">
                     <p>This <a href="#" role="button" class="btn btn-secondary popover-test" title="Popover title" data-content="Popover body content is set in this attribute.">button</a> triggers a popover on click.</p>
                        <hr>
                        <h5>Tooltips in a modal</h5>
                        <p><a href="#" class="tooltip-test" title="Tooltip">This link</a> and <a href="#" class="tooltip-test" title="Tooltip">that link</a> have tooltips on hover.</p>
                                              </div>
                    </div>
                </div>
                <div class="modal-body">
                    <%= form_with(model: event, remote: true) do |form| %>
                        <p class="description text-center">Fill in the Event info</p>
                        <div class="card-body">

  <div class="field">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, id: :event_title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :date_range, class: 'form-label' %>
    <%= form.text_field :date_range, id: :event_date_range, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :start, class: 'form-label' %>
    <%= form.text_field :start, id: :event_start, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :end, class: 'form-label' %>
    <%= form.text_field :end, id: :event_end, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :color, class: 'form-label' %>
    <%= form.text_field :color, id: :event_color, class: 'form-control' %>
  </div>


                        </div>
                    <% end %>
                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= form.submit class: "btn btn-outline-info" %>

                </div>
            </div>
        </div>
    </div>
</div>


<%= form_with(model: event, remote: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :date_range %>
    <%= form.text_field :date_range, id: :event_date_range %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.text_field :start, id: :event_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.text_field :end, id: :event_end %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color, id: :event_color %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
