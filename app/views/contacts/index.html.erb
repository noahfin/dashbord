<div class="container-fluid pt-0">
  <div class="row pt-0">
    <div class="col-md-3" id="sidenav"><%= render 'layouts/sidenav' %>
    </div>
    <div class="col-md-9   ">
      <div class="card card-5 mt-4 pt-0">
          <div class="card-header card-header-icon ">

      <span><H3 class="pl-3 pb-4 ">Contacts<a data-toggle="modal" data-target="#myModal" class="" title="">&nbsp;<i class="fa fa-file-excel-o text-info"></i></a></H3></span>

  </div>


      <div class="panel panel-default mt-3 card-5">
        <table class="table" id="contacts"><%= render  @contacts %>
        </table><% if @contacts.blank? %>
        <div class="panel-footer message">
          <div class="alert alert-warning">
            <strong>Record not found</strong>
          </div><% end %>
        </div>
        <div class="text-center p-3" id="pagin">
          <nav><%= paginate @contacts, remote: true %>
          </nav>
        </div>
        <div class="modal fade" id="form-modal"  >
          <div class="container">
            <div class="col-md-9 mr-auto ml-auto">


            <div class="modal-body" id="form-modal-body"></div>
            </div>
          </div>






         </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Trigger the modal with a button -->


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-muted">Import CSV for Contact</h4>
      </div>
      <div class="modal-body">
        <%= form_tag inport_contacts_path, multipart: true do %>
        <%= file_field_tag :file %>
         <label for="cell" class="bmd-label-floating text-muted" >Pick Group<small>(required)</small></label>
       <%=  select_tag 'group_id', options_for_select(@groups.collect{ |u| [u.name, u.id] }) %>


    <label for="cell" class="bmd-label-floating text-muted" >Pick users<small>(required)</small></label>  <div class="form-group">


    <div class="btn-group">
      <span class="mt-0 pt-1"><label class="text-light mt-0 pb-4 ">Share with</label> </span>
      <% User.all.each do |user| %><%  next if !user.first_name  %>
      <div class="togglebutton form-check-inline">
        <label>
          <ul class="list-inline">

            <li class="list-inline-item">    <input type="checkbox" name="input[]" checked="true" value=
            <%="#{user.id}" if user.first_name %> class="users-for-new-group"/>
            <span class="toggle"></span>
            <span class="text-muted"><%= user.first_name if user.first_name %>
            </span>
          </label></li>

            <% end %>
         <li class="list-inline-item">
          <span class="input-group-btn mr-0 ml-2">
            <button type="button" class="btn btn-fab btn-round btn-info save-new-group" id="pick-users-csv" >
              <i class="material-icons">check</i>
            </button>
          </span>
        </li>
        </ul>
        </div>

      </div>




      <div class="modal-footer">
        <%= submit_tag "Import CSV", class: "btn btn-info" %>

      </div>
     <% end %>
    </div>

  </div>
</div>
