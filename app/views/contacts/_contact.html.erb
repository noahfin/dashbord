<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left thumbnail">
        <a href="#">
        <%= image_tag contact.avatar.present? ? contact.avatar.url(:thumb) : gravatar_url(contact.email), class: "media-object" %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading text-info">
     <%= link_to contact_path(contact.id), class: 'text-info' do %>
      <%= contact.name %>
      <% end %>
        </h4>
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>


      <%= link_to edit_contact_path(contact.id), class: "btn btn-circle btn btn-outline-info", remote: true, title: 'edit', rel: "tooltip"  do %>
      <i class=" fa fa-edit e-contact"></i>
      </a>
      <% end %>
      <%= link_to contact_path(contact.id), method: :delete, class: 'btn btn-circle btn btn-outline-info  ', remote: true, data: { confirm: "Are you sure you want delete this contact?"}  do %>
      <i class="fa fa-trash d-contact" title='delete' rel="tooltip"></i>
      </a>
      <% end %>
      </a>
    </div>
  </td>
</tr>
