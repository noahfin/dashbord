<div class="container-fluid outer-contact-show">
<div class="row">
<div class="col-md-8">
<div class="card card-1-color r-s-p pt-3" >
<div class="card-header card-header-icon ">
   <div class="card-icon bg-hudson ">
      <i class="material-icons">perm_identity</i>
   </div>
   <%= form_with model: @contact, id: "contact_form_show" do |form|%>
   <h4 class="card-title text-light text-left"><span class="r-r"></span><span class="hide-btn  pull-right ">    <button class=" btn-link btn btn-just-icon toggle-contact mt-4 " type="button" data-toggle="collapse" data-target="#form-collapse" aria-expanded="false" aria-controls="form-collapse">
      <i class=" fa fa-edit text-info"></i>
      </button> </span>
      <span>
      <button class="btn bg-hudson pull-right toggle-contact show-btn" type="button" data-toggle="collapse" data-target="#form-collapse" aria-expanded="false" aria-controls="form-collapse">
      Edit Contact
      </button>
      </span>
   </h4>
</div>
<div class="card-body first-show-card">
   <div class="collapse " id="form-collapse">
      <%= render 'layouts/messages' if !flash.empty? %>
      <%=  hidden_field(:contact, :id, :value => @contact.id.to_s, id: 'contact_id_hidden') %>
      <div class="row">
         <div class="col-lg-3">
            <label class="text-gray">Company Name <span class="text-danger">*</span></label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :company, id: :contact_company, class: ' text-white form-control'%>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Prefix </label>
            <div class="form-group">
               <div class="c">
                  <div class="input-group">
                     <%= form.text_field :prefix, id: :contact_prefix, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">First Name</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :first_name, id: :contact_first_name, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>


         <div class=" col-lg-3">
            <label class="text-gray  bmd-label-floating">Middle Name</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :middle_name, id: :contact_middle_name, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row ">
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Last Name</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :last_name, id: :contact_last_name, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Suffix</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :suffix, id: :contact_suffix, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Owns Or Rents </label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :owns_cents, id: :contact_owns_cents, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Year Of Founding</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :year_of_Founding, id: :contact_year_of_Founding, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Primary Industry</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :primary_industry, id: :contact_primary_industry, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Web Address</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :web_address, id: :contact_web_address, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class=" col-lg-3">
            <label class="text-gray bmd-label-floating">Latitude </label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :latitude, id: :contact_latitude, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Longitude </label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :longitude, id: :contact_longitude, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row ">
         <div class=" col-lg-3">
            <label class="text-gray  bmd-label-floating">Email</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :email, id: :contact_email, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Suite</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :suite, id: :contact_suite, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray  bmd-label-floating">Total Employees</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :total_number_of_employees, id: :contact_total_number_of_employees, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Position </label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :postion, id: :contact_postion, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row ">
         <div class="col-sm-6 col-md-6 col-lg-3">
            <label class="text-gray bmd-label-floating">SIC </label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :sic, id: :contact_sic, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class=" col-lg-3">
            <label class="text-gray bmd-label-floating">Address</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :Fulladdress, id: :contact_address, class: 'form-control text-white' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <labe class="text-gray bmd-label-floating">
            Street Number</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :street_num, id: :contact_street_num, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class=" col-lg-3">
            <labe class="text-gray bmd-label-floating">
            Street Name</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :strret_name, id: :contact_strret_name, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row">
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">City</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :city, id: :contact_city, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class=" col-lg-3">
            <label class="text-gray bmd-label-floating">County</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                      <%= form.text_field :county, id: :contact_county, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class=" col-lg-3">
            <label class="text-gray bmd-label-floating">state</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :state, id: :contact_state, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class=" bmd-label-floating text-gray">Postal Code</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :postal_code, id: :contact_postal_code, class: ' text-white form-control' %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="row ">
         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Phone</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :phone, id: :contact_phone, class: 'form-control text-white',  autofocus: true %>
                  </div>
               </div>
            </div>
         </div>


         <div class="col-lg-3">
            <label class="text-gray bmd-label-floating">Cell phone</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :cell, id: :contact_cell, class: 'form-control text-white',  autofocus: true %>
                  </div>
               </div>
            </div>
         </div>

         <div class="col-md-3">
          <label class="text-gray bmd-label-floating">Notes</label>
            <div class="form-group">
               <div class="">
                  <div class="input-group">
                     <%= form.text_field :notes, id: :contact_notes, class: 'form-control text-white',  autofocus: true %>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-lg-3">
            <label class="text-gray">Country</label>
            <div class="form-group">
               <div class="cols-sm-10">
                  <div class="input-group">
                     <%= form.text_field :country, id: :contact_country, class: ' text-white form-control'  %>
                  </div>
               </div>
            </div>
         </div>
      </div>
          <div class="col-md-12 pull-right ml-0 pr-2 pl-0 mt-0">
            <div class=" form-group mr-0 pl-3">
             <% group_ids = [] %>
             <% if !@group_ids.nil? %>
                <%  @group_ids.each_with_index do |group, index| %>
                         <% group_ids[index] = group.group_id %>
                <% end %>
              <% end %>
              <% attr = {prompt: "Select Groups"} %><% attr[:selected] = group_ids %>
                      <%= form.collection_select :group_id, @groups, :id, :name, attr,{remote: true, multiple: "true", class: "selectpicker select_g_picker dropdown groups-for-new-group", id: 'contact_group_id' } %>

                       <%= form.select(:role, Contact.roles.keys.map {|role| [role.titleize,role]},{}, { :class => 'selectpicker dropdown' }  )%>
                      <% attr = {prompt: "Select related users"} %>
                      <%= form.collection_select :user_id, User.all, :id, :first_name, attr,{ remote: true, multiple: "true", required: true,  class: "selectpicker select_u_picker dropdown users-for-new-group " } %>

            </div>

                    </div>

      <!-- wizard container -->
      <div class="form-check pull-right p-2">
         <label class="form-check-label ">

            <%= form.check_box :verified, id: :contact_verified, class: 'form-check-input text-success ' %>
            <span class="form-check-sign text-success "  style="color:green">
            <span class="check text-success"></span>
            </span>
            <p class=" mb-3">  <%= @contact.verified ? 'Yes' : 'No' %>, Contact is <%= 'not' if !@contact.verified %>  verified.</p>
         </label>
      </div>
      <!-- wizard container -->
   </div>
</div>
<% end %>
<script>
$('.selectpicker').selectpicker('setStyle', 'dropdown-toggle btn-outline-info btn-round btn btn-block pl-3');
$('.selectpicker').attr("data-actions-box", "true");
$('.selectpicker').attr("dropupAuto", "false");
$('.selectpicker').attr("data-live-search", "true");
$('.selectpicker').attr("selectOnTabr", "true");
$('.selectpicker').attr("data-divider", "true");
$('.selectpicker').selectpicker('toggle');

</script>
