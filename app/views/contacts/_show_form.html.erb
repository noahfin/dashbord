<div class="container-fluid">
  <div class="row">
     <div class="col-md-8">
        <div class="card card-5" >
           <div class="card-header card-header-icon ">
              <div class="card-icon bg-hudson ">
                 <i class="material-icons">perm_identity</i>
              </div>
              <h4 class="card-title text-light text-left">Contact / Facts
              <%= form_with model: @contact, id: "contact_form_show" do |form|%>
                 <button class="btn bg-hudson pull-right toggle-contact" type="button" data-toggle="collapse" data-target="#form-collapse" aria-expanded="false" aria-controls="form-collapse">
                 Edit Contact
                 </button>
              </h4>
           </div>

              <div class="card-body">
                 <div class="collapse " id="form-collapse">
                    <%= render 'layouts/messages' if !flash.empty? %>
                     <%=  hidden_field(:contact, :id, :value => @contact.id.to_s, id: 'contact_id_hidden') %>

            <div class="row">
            <div class="col-lg-3">
              <label class="text-white">Company Name <span class="text-danger">*</span></label>
               <div class="form-group">

                      <div class="">
                        <div class="input-group">

                           <%= form.text_field :company, id: :contact_company, class: 'dark-form-control text-white form-control'%>
                        </div>
                     </div>

               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Prefix </label>
               <div class="form-group">

                      <div class="c">
                        <div class="input-group">

                          <%= form.text_field :prefix, id: :contact_prefix, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>
               </div>
            </div>
            <div class="col-lg-3">
               <label class="text-white  bmd-label-floating">First Name</label>
               <div class="form-group">

                    <div class="">
                      <div class="input-group">

                        <%= form.text_field :first_name, id: :contact_first_name, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>

               </div>
            </div>
            <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">Middle Name</label>
               <div class="form-group">

                  <div class="">
                      <div class="input-group">

                   <%= form.text_field :middle_name, id: :contact_suffix, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>

         </div>

          <div class="row ">
              <div class="col-lg-3">
                 <label class="text-white  bmd-label-floating">Last Name</label>
               <div class="form-group">

                  <div class="">
                      <div class="input-group">

                          <%= form.text_field :last_name, id: :contact_last_name, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Suffix</label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                            <%= form.text_field :suffix, id: :contact_suffix, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>

               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Owns Or Rents </label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                           <%= form.text_field :owns_cents, id: :contact_owns_cents, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>
               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Year Of Founding</label>
               <div class="form-group">

                    <div class="cols-sm-10">
                      <div class="input-group">

                        <%= form.text_field :year_of_Founding, id: :contact_year_of_Founding, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>

               </div>
            </div>

         </div>


          <div class="row">
            <div class="col-lg-3">
               <label class="text-white  bmd-label-floating">Primary Industry</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                    <%= form.text_field :primary_industry, id: :contact_primary_industry, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
            <div class="col-lg-3">
               <label class="text-white  bmd-label-floating">Web Address</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                          <%= form.text_field :web_address, id: :contact_web_address, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
            <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">Latitude </label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                            <%= form.text_field :latitude, id: :contact_latitude, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>

               </div>
            </div>
            <div class="col-lg-3">
                 <label class="text-white  bmd-label-floating">Longitude </label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                           <%= form.text_field :longitude, id: :contact_longitude, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>
               </div>
            </div>
          </div>
          <div class="row ">


            <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">Email</label>
               <div class="form-group">

                    <div class="cols-sm-10">
                      <div class="input-group">

                         <%= form.text_field :email, id: :contact_email, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>

               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Type</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                      <%= form.text_field :type, id: :contact_type, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Total Employees</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                         <%= form.text_field :total_number_of_employees, id: :contact_total_number_of_employees, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>


            <div class="col-lg-3">
              <label class="text-white  bmd-label-floating">Position </label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                            <%= form.text_field :postion, id: :contact_postion, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>

               </div>
            </div>
         </div>
         <div class="row ">
            <div class="col-sm-6 col-md-6 col-lg-3">
               <label class="text-white  bmd-label-floating">SIC </label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                          <%= form.text_field :sic, id: :contact_sic, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>
               </div>
            </div>
            <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">Address</label>
               <div class="form-group">

                    <div class="cols-sm-10">
                      <div class="input-group">

                          <input type="text" name="contact[address]" id="c-add-hidden" class= "dark-form-control text-white form-control">
                      </div>
                   </div>

               </div>
            </div>
            <div class="col-lg-3">
              <labe class="text-white bmd-label-floating">Street Number</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                      <%= form.text_field :street_num, id: :contact_street_num, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
            <div class=" col-lg-3">
              <labe class="text-white  bmd-label-floating">Street Name</label>
               <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                         <%= form.text_field :strret_name, id: :contact_strret_name, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>
               </div>
            </div>
         </div>

          <div class="row">
            <div class="col-lg-3">
                 <label class="text-white  bmd-label-floating">City <span class="text-danger">*</span></label>
               <div class="form-group">

                      <div class="cols-sm-10">
                        <div class="input-group">

                            <%= form.text_field :city, id: :contact_city, class: 'dark-form-control text-white form-control' %>
                        </div>
                     </div>

               </div>
            </div>
             <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">County</label>
               <div class="form-group">

                    <div class="cols-sm-10">
                      <div class="input-group">

                          <input type="text" name="contact[county]" class="dark-form-control text-white form-control" id="contact_county">
                      </div>
                   </div>

               </div>
            </div>

            <div class=" col-lg-3">
              <label class="text-white  bmd-label-floating">state</label>
               <div class="form-group">

                    <div class="cols-sm-10">
                      <div class="input-group">

                          <%= form.text_field :state, id: :contact_state, class: 'dark-form-control text-white form-control' %>
                      </div>
                   </div>

               </div>
            </div>
              <div class="col-lg-3">
                <label class=" bmd-label-floating text-white">Postal Code</label>
             <div class="form-group">

                <div class="cols-sm-10">
                    <div class="input-group">

                       <%= form.text_field :postal_code, id: :contact_postal_code, class: 'dark-form-control text-white form-control' %>
                    </div>
                 </div>
             </div>

</div>

          </div>




         <div class="row ">
          <div class="col-md-3">
            <label class="text-white">Role</label>
            <%= form.select(:role, Contact.roles.keys.map {|role| [role.titleize,role]},{}, { :class => 'selectpicker' }  )%>
         </div>
          <div class="col-md-3">

              <label>Users</label>
              <% attr = {prompt: "Select related users"} %>
                 <%= form.collection_select :user_id, User.all, :id, :first_name, attr,{ remote: true, multiple: "true",  class: "selectpicker  " } %>



         </div>
                <div class="col-md-3">
          <label class="text-white">Select Groups</label>
          <div class="">
            <% group_ids = [] %>
            <%  @group_ids.each_with_index do |group, index| %>

                         <% group_ids[index] = group.group_id %>

              <% end %>

              <% attr = {prompt: "Select Groups"} %><% attr[:selected] = group_ids %>

               <%= form.collection_select :group_id, @groups, :id, :name, attr,{remote: true, multiple: "true", class: "selectpicker select_g_picker", id: 'contact_group_id' } %>

           </div>
         </div>
             <div class="col-lg-3">
              <label class="text-white">Country</label>
             <div class="form-group">

                  <div class="cols-sm-10">
                      <div class="input-group">

                      <%= form.text_field :country, id: :contact_country, class: 'dark-form-control text-white form-control'  %>
                      </div>
                   </div>
               </div>



         </div>



         </div>



     <!-- wizard container -->
       <div class="form-check pull-right p-2">
           <label class="form-check-label ">
              <%= form.check_box :verified, id: :contact_verified, class: 'form-check-input text-success ' %>
              <span class="form-check-sign text-success "  style="color:green">
              <span class="check text-success"></span>
              </span>
              <p class=" mb-3">  <%= @contact.verified ? 'Yes' : 'No' %>, Contact is <%= 'not' if !@contact.verified %>  verified.</p>
           </label>
        </div><!-- wizard container -->

  </div>

      </div>

<% end %>

