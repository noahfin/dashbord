


<div class="landding-page">
    <div class="layer">
      <nav class="mb-1 navbar navbar-expand-sm navbar-trans border-0">
                <a class="navbar- blue-grey-text" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
                    <ul class="navbar-nav ml-auto blue-grey-text">
                      <li class="nav-item blue-grey-text ">
  <%= link_to "Log in", new_session_path(resource_name),class: 'nav-link blue-grey-text'  %>


</li>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
 <li class="nav-item active blue-grey-text" >


  <%= link_to "Sign up", new_registration_path(resource_name),class: 'nav-link blue-grey-text'  %>
<% end -%>
</li>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
 <li class="nav-item blue-grey-text">
  <%= link_to " Forgot password?", new_password_path(resource_name),class: 'nav-link blue-grey-text'  %>
<% end -%>
</li>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<li class="nav-item blue-grey-text">


  <%= link_to " Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class: 'nav-link blue-grey-text' %>
<% end -%>
</li>
                    </ul>
                </div>
            </nav>

        <div class="container">
            <div class="col-md-4 container">
                <div class="container creds-sec">

                     <!-- Material form login -->


                        <div class="card">
                            <center><i class="fa fa-user logo-i  mt-4" style="font-size: 4rem;  color: #263238"></i></center>


                        <div class="card-body">
                                              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                               <div class="md-form">
                              <i class="fa fa-user prefix grey-text"></i>
                             <%= f.password_field :password, class: "form-control white-text", placeholder: "Enter Password" %>
                              <label for="materialFormRegisterEmailEx" class="sr-only">Your password</label>
                          </div>

                          <!-- Material input email -->
                          <div class="md-form">
                              <i class="fa fa-exclamation-triangle prefix grey-text"></i>
                                    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control text-white', placeholder: "Enter Password confirmation" %>



                              <label for="materialFormRegisterConfirmEx" class="sr-only">Confirm your email</label>
                          </div>

                          <!-- Material input password -->
                          <div class="md-form">
                              <i class="fa fa-envelope prefix grey-text"></i>
                               <%= f.text_field :email, class: "form-control white-text", placeholder: "Email address", required: true %>
                              <label for="materialFormRegisterPasswordEx" class="sr-only"> Your email</label>
                          </div>

                          <div class="text-center mt-4">
                              <button class="btn btn-block special-color-dark" type="submit">Register</button>
                          </div>
                         <% end %>
                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>
</div>



