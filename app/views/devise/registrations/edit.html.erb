
  <div class="wrapper wrapper-full-page">
    <div class="page-header login-page header-filter" filter-color="black" style="background-image: url('<%= asset_url("login.jpg")  %>'); background-size: cover; background-position: top center;">
      <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
      <div class="container">
        <div class="col-md-4 col-sm-6 ml-auto mr-auto">
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin', html: { method: :put }) do |f| %>

            <%= render 'layouts/messages' %>
            <div class="card card-login card-hidden">
              <div class="card-header card-header-success text-center">
                <h4 class="card-title">Update Account</h4>
                <div class="social-line">
                  <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                    <i class="fa fa-facebook-square"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                    <i class="fa fa-twitter"></i>
                  </a>
                  <a href="#pablo" class="btn btn-just-icon btn-link btn-white">
                    <i class="fa fa-google-plus"></i>
                  </a>
                </div>
              </div>
              <div class="card-body ">
                <p class="card-description text-center">Or Be Classical</p>
                 <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div class="text-center">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>
                <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">face</i>
                      </span>
                    </div>
                    <%= f.text_field :first_name, class: "form-control white-text", placeholder: "First Name", required: true %>


                  </div>
                </span>
                <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">face</i>
                      </span>
                    </div>
                    <%= f.text_field :last_name, class: "form-control white-text", placeholder: "Last Name", required: true %>

                  </div>
                </span>
                <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">email</i>
                      </span>
                    </div>
                     <%= f.email_field :email, class: "form-control pl-2", placeholder: "Email address", required: true %>                  </div>
                </span>
                <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">lock_outline</i>
                      </span>
                    </div>
                    <%= f.password_field :password, class: "form-control  pl-2", placeholder: "Enter Password", required: true  %>

                  </div>
                </span>
                 <span class="bmd-form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">lock_outline</i>
                      </span>
                    </div>
                    <span>
                   <%= f.label :current_password, class: 'bmd-label-floating' do %> <i>(we need your current password to confirm your changes)</i></span> <% end %><br />
                    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>

                  </div>
                </span>
              </div>
              <div class="card-footer justify-content-center">
                <button type="submit" class="btn btn-danger btn-link btn-lg">Lets Update Account</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <footer class="footer ">
        <div class="container">
          <nav class="pull-left">
            <ul>
              <li>

              </li>
              <li>

              </li>
              <li>

              </li>
              <li>

              </li>
            </ul>
          </nav>
          <div class="copyright pull-right">


          </div>
        </div>
      </footer>
    </div>
  </div>
  <script>
    $(document).ready(function() {
    demo.checkFullPageBackgroundImage();

    setTimeout(function() {
      // after 1000 ms we add the class animated to the login/register card
      $('.card').removeClass('card-hidden');
    }, 700)
  });
</script>
</div>



