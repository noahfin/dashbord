
<div class="off-canvas-sidebar lock-page">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-primary navbar-transparent navbar-absolute" color-on-scroll="500">
    <div class="container">
      <div class="navbar-wrapper">
        <a class="navbar-brand" href="#pablo">Hudson Commercial Lab</a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
        <span class="sr-only">Toggle navigation</span>
        <span class="navbar-toggler-icon icon-bar"></span>
        <span class="navbar-toggler-icon icon-bar"></span>
        <span class="navbar-toggler-icon icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "<i class='<i class='material-icons'>dashboard</i> Dashboard".html_safe, root_path, class: 'nav-link' %>

          </li>
              <li class="nav-item ">
          <%= link_to "<i class='material-icons'>person_add</i> Register".html_safe, new_user_registration_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
          <%= link_to "<i class='material-icons'>fingerprint</i> Login".html_safe, new_user_session_path, class: 'nav-link' %>
        </li>
        <li>
          <%= link_to "<i class='material-icons'>lock_open</i>Locked".html_safe, new_user_confirmation_path, class: 'nav-link' %>
        </li>
          <li class="nav-item  active ">
     <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'nav-link' do  %>
         <i class="material-icons">lock_open</i> Lock

         <%end%>
       <% end -%>

          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End Navbar -->
  <div class="wrapper wrapper-full-page">
    <div class="page-header lock-page header-filter" style="background-image: url('<%= asset_url("sidebar-1.jpg")  %>'); background-size: cover; background-position: top center;">
      <!--   you can change the color of the filter page using: data-color="blue | green | orange | red | purple" -->
      <div class="container">
        <div class="col-md-4 ml-auto mr-auto">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-signin', html: { method: :post }) do |f| %>

          <div class="card card-profile text-center card-hidden">

            <%= render 'layouts/messages' %>
            <div class="card-header ">
              <div class="card-avatar">

              </div>
            </div>
            <div class="card-body ">
              <h4 class="card-title">Need Password</h4>
              <div class="form-group">
                <label for="exampleInput1" class="bmd-label-floating">Enter Email</label>
                        <%= f.text_field :email, class: "form-control", required: true %>
              </div>
            </div>
            <div class="card-footer justify-content-center">
              <button type="submit" class="btn btn-rose btn-round">Unlock</button>

            </div>
            <br>
             <center class="text-center"><%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>

              <%= link_to  " Still Need To confirm email?", new_confirmation_path(resource_name),class: 'text2' %><br />
            <% end -%>
        </center>
          </div>
        </div>
      </div>
    </div>
<%end %>
  </div>
</div>
<script>
 $(document).ready(function() {
    demo.checkFullPageBackgroundImage();

    setTimeout(function() {
      // after 1000 ms we add the class animated to the login/register card
      $('.card').removeClass('card-hidden');
    }, 700)
  });</script>
