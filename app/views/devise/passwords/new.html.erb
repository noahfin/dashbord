
  <style>
   .intro-2 {
   margin: auto;
   width: 42%;
   }
   .mainlogin {
   margin-top: 15%;
   }
   .card-creds-form { margin-top: 15% !important; margin: auto !important; }
   h6 {
   line-height: 1.7;
   }
   .card-reg { z-index: 99999999; }
   .lable-remember {
      position: relative;
      top: -1.1rem;
      left: 1.1rem;
   }
   @media screen and (min-width: 1600px) {
  .mainlogin {
    margin-top: 13%;
  }
}
</style>
<body class="presentation-page ">
   <nav class="navbar navbar-color-on-scroll navbar-transparent    fixed-top  navbar-expand-lg " color-on-scroll="100" id="sectionsNav">
      <div class="container">
         <div class="navbar-translate">
            <a class="navbar-brand text-white" href="/">Hudson Commercial Lab </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            </button>
         </div>
         <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
               <li class="dropdown nav-item">
                  <div class="collapse navbar-collapse justify-content-end" id="navbar">
              <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "<i class='material-icons'>dashboard</i> Dashbord".html_safe, root_path, class: 'nav-link text-white' %>

              </li>
              <li class="nav-item ">
              <%= link_to "<i class='material-icons'>person_add</i> Register".html_safe, new_user_registration_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to "<i class='material-icons'>fingerprint</i> Login".html_safe, new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <li>
              <%= link_to "<i class='material-icons'>lock_open</i> Locked".html_safe, new_user_confirmation_path, class: 'nav-link text-white' %>
            </li>
              <li class="nav-item  active ">
              <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
              <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'nav-link' do  %>
             <i class="material-icons">lock_open</i> Lock

             <% end %>
            <% end -%>

          </li>
        </ul>
                  </div>
            </ul>
         </div>
      </div>
   </nav>
   <div class="page-header mdl-color--grey-900">
      <section class=" ml-auto mr-auto">
         <div class=" ml-auto mr-auto">
            <p class="notice  bg-footer text-danger mt-3 mb-3 ml-3 p-2"><%= notice %></p>
            <p class="alert  bg-footer text-danger mt-3 mb-3 ml-3 p-2"><%= alert %></p>
            <div class="mask ml-auto mr-auto ">
               <div class="ml-auto mr-auto">
                  <div class="mainlogin " >
                     <div class=" cool-form ml-auto mr-auto bg-footer  p-4">
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-signin', html: { method: :post }) do |f| %>
                        <h2 class="text-center">Cant Access Account</h2>
                        <%= devise_error_messages! %>
                        <div class="form-group mr-auto ml-auto">
                           <label class="lb-responsive">Enter Email</label> <br class="br-responsive">
                           <%= f.email_field :email, class: "dark-form-control pl-2 text-light", required: true, placeholder: 'Email'  %>
                        </div>

                        <div class="form-group">
                           <button type="submit" class="btn btn-outline-info p-2 btn-block">Unlock Account</button>
                        </div>
                        <div class="clearfix">
                            <label class="pull-left checkbox-inline">  <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class: "lable-remember" %>
                      </div>
                    <% end -%></label>
                           <div class="col-md-12 mt-3 pt-4">

                           <div class="clearfix ">
                              <div class="text-left pull-left">
                              <div class="text-left"><%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>

                                  <%= link_to  "Still Need To confirm email?", new_confirmation_path(resource_name), class: 'text-white  float-left pull-left pt-3 ' %>
                                  <% end -%>
                            </div>
                               </div>
                              </div>
                           </div>
                        </div>
                        <% end %>
                     </div>
                  </div>
               </div>
            </div>
         </div>
   </div>
   </section>
   </div>
</body>

