<body class="presentation-page ">
   <nav class="navbar navbar-color-on-scroll navbar-transparent    fixed-top  navbar-expand-lg " color-on-scroll="100" id="sectionsNav">
      <div class="container">
         <div class="navbar-translate">
            <a class="navbar-brand text-white" href="/">Hudon Commercial Lab </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            </button>
         </div>
         <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
               <li class="dropdown nav-item">
                  <div class="collapse navbar-collapse justify-content-end" id="navbar">
                     <ul class="navbar-nav text-white">
                        <li class="nav-item ">
                           <a href="/" class="nav-link">
                           <i class="material-icons">dashboard</i> Dashboard
                           </a>
                        </li>
                        <li class="nav-item active">
                           <%= link_to "<i class='material-icons'>person_add</i> Register".html_safe, new_user_registration_path, class: 'nav-link' %>
                        </li>
                        <li class="nav-item ">
                           <%= link_to "<i class='material-icons'>fingerprint</i> Login".html_safe, new_user_session_path, class: 'nav-link' %>
                        </li>
                        <li>
                           <%= link_to "<i class='material-icons'>lock_open</i>Locked".html_safe,  new_user_password_path, class: 'nav-link' %>
                        </li>
                     </ul>
                  </div>
            </ul>
         </div>
      </div>
   </nav>
   <div class="page-header header-filter clear-filter" data-parallax="true" style="background-image: url('<%= asset_url("purple-1.jpg") %>')";>
      <section class="view intro-2">
         <div class="full-bg-img">

            <div class="mask rgba-indigo-light  flex-center">
               <div class="col-md-12">
                     <div style="padding-top: 2%; ">


      <div class="wizard-container">
        <div class="card card-wizard card-reg" data-color="purple" id="wizardProfile">
           <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: '') do |f| %>
            <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
            <div class="card-header text-center">
              <h3 class="card-title">
                Login to Your Acount
              </h3>
              <h5 class="card-description text-white">I hope you rember your password, if not you can clcik the link above to reset it</h5>
            </div>
            <div class="wizard-navigation">
              <ul class="nav nav-pills">
                <li class="nav-item">
                  <a class="nav-link active" href="#about" data-toggle="tab" role="tab">
                    login
                  </a>
                </li>

              </ul>
            </div>
            <div class="card-body">
              <div class="tab-content">
                <div class="tab-pane active" id="about">
                  <h5 class="info-text text-white"> Signin with your email password you used to register with </h5>
                  <div class="row justify-content-center">
                    <div class="col-md-6">
                            <div class="input-group form-control-lg text-white">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                               <i class="material-icons text-light">lock_outline</i>
                          </span>
                        </div>
                        <div class="form-group">
                           <label for="exampleInput1" class="bmd-label-floating text-white">Email (required)</label>
                        <%= f.email_field :email, class: "form-control pl-2 text-light", required: true %>
                        </div>
                      </div>


                      <div class="input-group form-control-lg text-white">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                               <i class="material-icons text-light">lock_outline</i>
                          </span>
                        </div>
                        <div class="form-group">
                          <label for="exampleInput11" class="bmd-label-floating">Password</label>
                         <%= f.password_field :password, class: "form-control  pl-2 text-light", required: true  %>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>

              </div>
            </div>
            <div class="card-footer">
              <div class="mr-auto">
              </div>
              <div class="ml-auto">

                <button type="submit"  class="btn btn-fill btn-primary" >Sign in </button>
              </div>
              <div class="clearfix"></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
      <!-- wizard container -->
    </div>
            </div>
         </div>
     </div>
      </section>
   </div>
</body>



