<p id="notice"><%= notice %></p>

<h1>Steps</h1>

<table>
  <thead>
    <tr>
       <th >Name</th>
        <th>Discription</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td class="text-info"><%= step.name %></td>
        <td class="text-warring"><%= step.description %></td>
        <td class="text-white"><%= link_to 'Show', step, class: "text-white" %></td>
        <td class="text-info"><%= link_to 'Edit', edit_step_path(step), class: "text-success" %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

