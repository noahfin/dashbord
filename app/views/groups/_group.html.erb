
    <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-5">
                                <div class="card-header ml-0 pl-2" >
                                <%= link_to group_path(group.id),class: 'text-info' do %>
                                   </span> <h2 class="title ml-0 pl-0"><span class="badge badge-info"><%= group.name %></span></h2><a href="#top" title="top">Back up <i class="fa fa-arrow-up"></i></a><span>
                                <% end %>
                                    <p class="category"><%= group.contacts.count %>  contacts in this group</p>
                                </div>
                                <div class="card-content table-responsive" id="g-name-<%=group.id.to_s%>">
                                    <table class="table text-light">
                                        <thead class="text-info">
                                            <th>Name</th>
                                            <th>phone</th>
                                            <th>cell</th>
                                            <th>email</th>
                                            <th>company</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </thead>
                                        <tbody>
                                        <% group.contacts.each do |contact| %>
                                       <tr>


                                        <td><%= contact.name %></td>
                                        <td><%= contact.phone %></td>
                                        <td><%= contact.cell %></td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.company %></td>
                                        <td><%= link_to edit_contact_path(contact.id), class: "btn btn-circle btn btn-outline-info", remote: true, title: 'edit', rel: "tooltip"  do %>
                                        <i class=" fa fa-edit e-contact"></i>

                                        <% end %></td>
                                        <td>  <%= link_to contact_path(contact.id), method: :delete, class: 'btn btn-circle btn btn-outline-info  ', remote: true, data: { confirm: "Are you sure you want delete this contact?"}  do %>
                                              <i class="fa fa-trash d-contact" title='delete' rel="tooltip"></i>

                                              <% end %></td>

                                      </tr>
                                      <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


